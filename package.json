    "@hapi/good-console": "^9.0.1",
    "@hapi/good-squeeze": "^6.0.0",
    "@hapi/hapi": "^21.3.2",
    "@hapi/hoek": "^11.0.2",
    "@hapi/inert": "^7.1.0",
    "@hapi/joi": "^17.1.1",
    "@hapi/jwt": "^3.2.0",
    "@hapi/shot": "^6.0.1",
    "@hapi/vision": "^7.0.3",
    "axios": "^1.5.1",
    "bcrypt": "^5.1.1",
    "blipp": "^4.0.2",
    "dotenv": "^8.6.0",
    "hapi-cors": "^1.0.3",
    "hapi-swagger": "^17.2.0",
    "install": "^0.13.0",
    "joi": "^17.10.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^3.6.0",
    "nodemailer": "^6.9.7",
    "npm": "^10.2.5",
    "request": "^2.88.2",
    "require-directory": "^2.1.1",
    "sequelize": "^5.21.11",
    "underscore": "^1.13.6"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "jest": "^28.0.0",
    "nodemon": "^2.0.4",
    "sequelize-mock": "^0.10.2"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6.12"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/application/**/*.js"
    ],
    "coverageDirectory": "coverage"
  }
